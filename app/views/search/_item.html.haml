%li.span3
  .thumbnail
    %table.table-condensed
      %tr
        %td= image_tag(item.image_set(:primary).thumbnail.url)
        %td.span2= item.title
    .caption
      = form_tag do_search_path, method: :put do
        = hidden_field(item, :id)
        %p= submit_tag 'Pick', class: "btn btn-info btn-small"
